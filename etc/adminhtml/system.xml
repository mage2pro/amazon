<?xml version='1.0'?>
<config
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xsi:noNamespaceSchemaLocation='urn:magento:module:Df_Config:etc/system_file.xsd'
>
    <system>
        <section id='df_payment'>
            <!--
                2015-09-25
                1-я и 2-я цифры sortOrder соответствуют порядковому номеру первой буквы модуля
                в английском алфавите: https://en.wikipedia.org/wiki/English_alphabet
				3-я и 4-я цифры sortOrder соответствуют порядковому номеру второй буквы модуля
                в английском алфавите.
            -->
            <group
                id='amazon_payments'
                translate='label'
                type='text'
                sortOrder='116'
                showInDefault='1'
                showInWebsite='1'
                showInStore='1'
            >
                <label>Amazon Payments</label>
                <field
                    id='enable'
                    translate='label'
                    type='Df\Framework\Data\Form\Element\Checkbox'
                    sortOrder='1'
					showInDefault='1'
					showInWebsite='1'
					showInStore='1'
                >
                    <label>Enable?</label>
					<backend_model>Df\Config\Backend\Checkbox</backend_model>
                    <comment><![CDATA[Enable the «<a href='https://mage2.pro/c/extensions/amazon-payments'>Amazon Payments</a>» extension?]]></comment>
                </field>
				<field
					id='test'
					translate='label'
					type='Df\Framework\Data\Form\Element\Checkbox'
					sortOrder='2'
					showInDefault='1'
					showInWebsite='1'
					showInStore='1'
				>
					<label>Sandbox Mode?</label>
					<backend_model>Df\Config\Backend\Checkbox</backend_model>
					<comment><![CDATA[<a href='https://mage2.pro/t/1696'>How to switch a merchant account to the Sandbox View?</a>]]></comment>
					<depends><field id='enable'>1</field></depends>
				</field>
				<group
					id='login_with_amazon'
					translate='label'
					type='text'
					sortOrder='3'
					showInDefault='1'
					showInWebsite='1'
					showInStore='1'
				>
					<label>Login with Amazon</label>
					<depends><field id='enable'>1</field></depends>
					<field
						id='clientId'
						translate='label'
						type='text'
						sortOrder='1'
						showInDefault='1'
						showInWebsite='0'
						showInStore='0'
					>
						<label>Client ID</label>
						<comment><![CDATA[<a href='https://mage2.pro/t/1705'>Where to find it?</a>]]></comment>
						<validate>required-entry validate-length maximum-length-61 minimum-length-61</validate>
						<depends>
							<field id='enable'>1</field>
						</depends>
					</field>
					<field
						id='clientSecret'
						translate='label'
						type='obscure'
						sortOrder='2'
						showInDefault='1'
						showInWebsite='0'
						showInStore='0'
					>
						<label>ClientSecret</label>
						<comment><![CDATA[<a href='https://mage2.pro/t/1706'>Where to find it?</a>]]></comment>
						<backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
						<validate>required-entry validate-length maximum-length-64 minimum-length-64</validate>
						<depends>
							<field id='enable'>1</field>
						</depends>
					</field>
				</group>
            </group>
        </section>
    </system>
</config>